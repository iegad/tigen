import QtQuick 2.15
import QtQuick.Controls 2.15
import "../components"


Rectangle {
    id: vMsg
    property string dlgID: ''
    property string currentID: 'Aizen'
    property ListModel mMsgHistory: ListModel{}

    Text {
        id: txtTitle
        text: vMsg.dlgID
        color: '#E3E3E3'
        anchors.left: parent.left
        anchors.leftMargin: 5
        font.pixelSize: 19
        anchors.top: parent.top
        anchors.topMargin: 5
    }

    Rectangle {
        id: msg
        color: '#333333'
        anchors.left: parent.left
        anchors.top: txtTitle.bottom
        anchors.topMargin: 5
        anchors.right: parent.right
        width: parent.width
        height: parent.height * 0.65

        Component {
            id: cMsg
            XMsgPlant {
                isSelf: fromID === currentID
                imageSource: 'qrc:/img/resources/avatar.jpg'
                width: vMsg.width * 0.7
                color: '#333333'
                msgContent: msg
                Component.onCompleted: {
                    if (isSelf) {
                        anchors.right = parent.right
                        anchors.rightMargin = 20
                    }
                }
            }
        }

        Component.onCompleted: {
            mMsgHistory.append({
                "fromID": 'Tigen',
                "toID": '',
                "msg": ' !!!',
                "time": '2022-01-02 12:12:12'
            })

            mMsgHistory.append({
                "fromID": 'Aizen',
                "toID": '',
                "msg": 'asdfasdfasdfasdfasdfasdfasdfasdf',
                "time": '2022-01-02 12:12:12'
            })
        }

        ListView {
            id: lvMsg
            anchors.fill: parent
            delegate: cMsg
            model: mMsgHistory
            clip: true
            boundsBehavior: Flickable.StopAtBounds

            ScrollBar.vertical: ScrollBar {
                id: scrollBar
                width: 6
                z: 10
                opacity: 0.7
                policy: ScrollBar.AlwaysOn

                background: Rectangle {
                    id: bg
                    color: '#636363'
                }
            }

            Component.onCompleted: lvMsg.positionViewAtIndex(lvMsg.count - 1, ListView.Beginning)
        }
    }

    Rectangle {
        id: tools
        anchors.left: parent.left
        anchors.right: parent.right
        anchors.top: msg.bottom
        height: 30
        width: parent.width
    }

    Rectangle {
        id: rcMsg
        color: '#E3E3E3'
        anchors.left: parent.left
        anchors.right: parent.right
        anchors.top: tools.bottom
        height: parent.height - msg.height - 100

        TextInput {
            id: txtMsg
            anchors.fill: parent
            anchors.topMargin: 5
            anchors.leftMargin: 5
            anchors.rightMargin: 5
            anchors.bottomMargin: 5
            selectByMouse: true
            wrapMode: TextEdit.Wrap

            onAccepted: sendMessage()
        }
    }

    function sendMessage() {
        let str = txtMsg.text;
        if (str.length) {
            vMsg.mMsgHistory.append({
                "fromID": currentID,
                "toID": dlgID,
                "msg": str,
            })
            lvMsg.positionViewAtIndex(lvMsg.count - 1, ListView.Beginning)
            txtMsg.text = ''
        }
    }

    XButton {
        id: btnSend
        anchors.right: parent.right
        anchors.top: rcMsg.bottom
        anchors.topMargin: 3
        height: 36
        width: 120
        Text {
            anchors.centerIn: parent
            text: qsTr("发送")
        }
        color: '#E3E3E3'

        onClicked: sendMessage()
    }
}
